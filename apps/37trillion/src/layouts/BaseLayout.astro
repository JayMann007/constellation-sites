---
import OfficerChat from "../components/OfficerChat.astro";
import GlobalNav from "../components/GlobalNav.astro";
import "../styles/global.css";

const {
  title = "37 Trillion",
  description = "Community of One",
  showNavCta = true,
  navCtaHref = "/#start",
  navCtaLabel = "Start here",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>

  <body class="bg-neutral-950 text-neutral-100 antialiased">
    <GlobalNav ctaHref={navCtaHref} ctaLabel={navCtaLabel} showCta={showNavCta} />

    <main class="min-h-screen">
      <slot />
    </main>

    <OfficerChat />
  </body>
</html>