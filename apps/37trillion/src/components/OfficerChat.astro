---
// src/components/OfficerChat.astro
const OFFICER_API_URL = "https://officer-api.joseph-1ad.workers.dev";
---

<div id="officer-interface" class="fixed bottom-6 right-6 z-50 flex flex-col items-end font-sans">
  
  <div id="chat-window" class="hidden bg-neutral-900 border border-neutral-700 rounded-2xl shadow-2xl w-80 sm:w-96 mb-4 overflow-hidden flex flex-col h-[500px] transition-all duration-300">
    
    <div class="bg-black p-4 border-b border-neutral-800 flex justify-between items-center">
      <div class="flex items-center gap-3">
        <div id="avatar-container" class="relative w-8 h-8 rounded-full bg-cyan-900 flex items-center justify-center">
          <div id="avatar-pulse" class="absolute inset-0 rounded-full bg-cyan-500 opacity-0"></div>
          <span class="relative z-10 text-cyan-200 text-xs font-bold tracking-tighter">37T</span>
        </div>
        <div>
          <span class="text-neutral-200 font-bold text-sm tracking-wide block">Mya | Unity of One</span>
          <span class="text-neutral-500 text-[10px] uppercase tracking-wider block">Pilot Mentor</span>
        </div>
      </div>
      <button id="close-btn" class="text-neutral-500 hover:text-white transition text-xl">&times;</button>
    </div>

    <div id="messages" class="flex-1 overflow-y-auto p-4 space-y-4 bg-neutral-900 scroll-smooth">
      <div class="text-neutral-600 text-[10px] text-center uppercase tracking-widest mt-2 mb-4">System Online</div>
      
      <div class="flex justify-start animate-fade-in">
        <div class="bg-neutral-800 text-neutral-300 rounded-2xl rounded-tl-none px-4 py-3 text-sm max-w-[85%] shadow-sm">
          Greetings, Pilot. I am Mya. How can I assist your navigation today?
        </div>
      </div>
    </div>

    <form id="chat-form" class="p-3 bg-black border-t border-neutral-800 flex gap-2">
      <input 
        type="text" 
        id="user-input" 
        class="flex-1 bg-neutral-900 text-white text-sm rounded-full px-4 py-2 focus:outline-none focus:ring-1 focus:ring-cyan-500 placeholder-neutral-600 border border-neutral-800"
        placeholder="Enter query..."
        autocomplete="off"
      />
      <button type="submit" class="bg-cyan-700 hover:bg-cyan-600 text-white rounded-full p-2 transition shadow-lg disabled:opacity-50 disabled:cursor-not-allowed">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 10